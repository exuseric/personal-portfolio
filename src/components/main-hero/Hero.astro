<style>
    .hero {
        padding-top: var(--size-24);
        height: 100%;
        min-height: 500px;
    }

    .hero__wrapper {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        height: 100%;
    }
    
    .hero__wrapper {
        text-align: center;
    }

    .hero__title {
        margin-block: var(--size-3);
    }

    .hero__subtitle {
        text-transform: uppercase;
        font-weight: 600;
    }
    
    .hero__illustration {
        margin-top: var(--size-8);
        width: 100%;
