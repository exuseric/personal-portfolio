---
import { Image } from "astro:assets";
import ToastImage from "@/images/toast_or_ghost.png";

import { projectsQuery } from "@/utils/queries";
import { getContent } from "@/utils/graphql-client";
import { Icon } from "astro-icon/components";

const {
    homePage: { projects: data },
} = await getContent(projectsQuery);
const { id } = Astro.props;
---

<div class="featured container" id={id} data-parent-container>
    <header class="header">
        <h2>{data.heading}</h2>
    </header>

    <div class="projects">
        {
            data.project.map((project) => (
                <div class="projectCard">
                    <div class="projectCard__image">
                        {project.cover ? (
                            <Image
                                src={project.cover.url}
                                alt={project.heading}
                                width={project.cover.width}
                                height={project.cover.height}
                                loading="lazy"
                                decoding="async"
                                format="webp"
                                widths={[300, 600, 900]}
                            />
                        ) : (
                            <Image
                                src="https://placehold.co/700x400.webp"
                                alt="project-cover"
                                width="700"
                                height="400"
                                loading="lazy"
                                decoding="async"
                                format="webp"
                                widths={[300, 600, 900]}
                            />
                        )}
                    </div>
                    <article>
                        <header>
                            <h3 class="projectCard__title">{project.heading}</h3>
                            <div class="btn-group">
                                {project.cta.map((cta) => (
                                    <a
                                        href={cta.url}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="link-button link-button--secondary"
                                    >
                                        {cta.title}
                                        <Icon name="mdi:open-in-new" />
                                    </a>
                                ))}
                            </div>
                        </header>
                        <div>
                            <slot set:html={project.body.html} />
                        </div>
                    </article>
                </div>
            ))
        }
    </div>
</div>

<style>
    .projects {
        margin-top: var(--size-20);
    }
    .projectCard__image > img {
        width: 100%;
        height: 100%;
        overflow: hidden;

        object-fit: contain;
        object-position: center;
    }

    .projectCard__title {
        margin-bottom: var(--size-2);
    }
    @media (min-width: 768px) {
        .projectCard {
            display: grid;
            grid-template-columns: auto 1fr;
            gap: var(--size-8);

            padding: var(--size-8);
            border-radius: var(--radius-lg);

            color: var(--text-on-brand-color);
            background-color: var(--surface-brand-default);

            & > article {
                display: flex;
                flex-direction: column;
                gap: var(--size-8);
            }
        }

        .projectCard__image {
            max-width: 500px;
        }
    }
</style>
