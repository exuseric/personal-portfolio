---
import { Image } from "astro:assets";

const rsvpProject = {
    title: "Toast or Ghost",
    description:
        "<p>A streamlined RSVP management app built with Next.js, Supabase, and Postgres (via Xata). Designed for event organizers who enjoy clean UX and not chasing people down in group chats.</p> <p>Organizers can create events, send out branded invites, and track RSVPs in real-time. Attendees can RSVP in two clicks and even update their responses later â€” because people love changing their minds.</p>",
    image: "https://placehold.co/700x400.webp",
    tags: ["Next.js", "Supabase", "Postgres"],
};

const bookMeProject = {
    title: "BookMeMaybe",
    description:
        "A booking platform for solo service providers: tutors, dog walkers, life coaches (don't @ me). Create a custom booking page, manage your availability, and accept payments without crying.",
    image: "https://placehold.co/700x400.webp",
    tags: ["Next.js", "Clerk", "Postgres"],
};

const projects = [rsvpProject, bookMeProject];
---

<div class="featured container">
    <header class="featured__header">
        <h2>Featured Projects</h2>
    </header>

    <div class="featured__projects">
        {
            projects.map((project) => (
                <div class="featured__project_card">
                    <div class="featured__project_card__image">
                        <Image
                            src={project.image}
                            alt="project-cover"
                            width="700"
                            height="350"
                        />
                    </div>

                    <article class="featured__project_card__body" data-content-wrapper>
                        <h3>{project.title}</h3>

                        <div class="featured__project_card__description">
                            <slot set:html={project.description}></slot>
                        </div>

                        <ul class="featured__project_card__tech">
                            {project.tags.map((tag) => (
                                <li class="tag">{tag}</li>
                            ))}
                        </ul>
                    </article>
                </div>
            ))
        }
    </div>
</div>

<style>
    .featured__projects {
        display: flex;
        flex-direction: column;
        gap: var(--space-4);

        padding: var(--space-4) 0;
    }
    .featured__project_card__image > img {
        width: 100%;
        height: 100%;
        overflow: hidden;

        object-fit: contain;
        object-position: center;
    }
    .featured__project_card__description {
        display: flex;
        flex-direction: column;
        gap: var(--space-2);
    }

    .featured__project_card__tech {
        display: flex;
        flex-flow: row wrap;
        gap: var(--space-2);
        margin-top: var(--space-4);
        padding: 0;

        list-style-type: none;
    }

    @media (min-width: 768px) {
        .featured__project_card {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-template-rows: 1fr;
            gap: var(--space-4);
            align-items: center;
        }

        .featured__project_card > *{
            grid-row: 1 / -1;
            height: 100%;
        }

        .featured__project_card__body {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .featured__project_card:nth-child(even)> .featured__project_card__image {
            grid-column: 2 / -1;
        }
        .featured__project_card:nth-child(even)> .featured__project_card__body {
            grid-column: 1 / 2;
        }
    }
</style>
