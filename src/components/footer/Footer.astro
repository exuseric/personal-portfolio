---
import SocialButtons from "@/components/navigation/SocialButtons.astro";
---

<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-section">
                <span class="copyright text-sm text-muted"
                    >&copy;&nbsp;{new Date().getFullYear()}&nbsp;Eric Gathoni. All rights reserved.</span
                >
            </div>
            <nav class="footer-nav" aria-label="Footer navigation">
                <SocialButtons />
            </nav>
        </div>
    </div>
</footer>

<style>
    /* Footer styling using existing Carbon-inspired variables */
    .footer {
        border-top: 1px solid var(--color-border);
        background-color: var(--accent-lighter);
        padding: var(--space-6) var(--space-4);
        margin-top: auto; /* Push footer to bottom when used with flex page layout */
    }

    .footer-content {
        /* width: var(--content-width); */
        margin-inline: auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: var(--space-4);
        width: 100%;
    }

    .footer-section {
        /* Ensures proper spacing on mobile when wrapped */
        flex: 1 1 auto;
        min-width: 200px;
    }

    .copyright {
        display: block;
    }

    .footer-links {
        display: flex;
        gap: var(--space-6);
        flex-wrap: wrap;
        padding: 0;
        margin: 0;
        list-style: none;
    }

    .footer-link {
        color: var(--color-text);
        text-decoration: none;
        transition: color var(--transition-all);
        border-bottom: 1px solid transparent;
    }

    .footer-link:hover {
        color: var(--brand-accent);
        border-bottom-color: var(--brand-accent);
    }

    /* Responsive adjustments */
    @media (max-width: 671px) {
        .footer-content {
            flex-direction: column;
            align-items: flex-start;
            gap: var(--space-4);
        }

        .footer-links {
            gap: var(--space-4);
        }
    }
</style>
